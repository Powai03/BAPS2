generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ðŸ“Œ ModÃ¨le Utilisateur
model Utilisateur {
  id            String  @id @default(uuid()) 
  nom           String?  // Facultatif pour les entreprises
  prenom        String?  // Facultatif pour les entreprises
  nomEntreprise String?  // Facultatif pour les micro-entreprises
  email         String  @unique
  password      String
  numero        String?
  telephone     String?
  description   String?
  adresse       String
  siteWeb       String?
  logo          String?
  role          RoleUtilisateur
  etatCreation  Boolean @default(false)
  etatModification Boolean @default(false)
}

// ðŸ“Œ Enum pour les rÃ´les des utilisateurs
enum RoleUtilisateur {
  MICRO_ENTREPRISE
  ENTREPRISE
  ADMIN
}
