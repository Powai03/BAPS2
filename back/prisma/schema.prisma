generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id                String          @id @default(uuid())
  nom               String?
  email             String          @unique
  password          String
  numero            String?
  telephone         String?
  description       String?         @db.VarChar(400)
  adresse           String          @default("Inconnu")
  siteWeb           String?
  role              RoleUtilisateur
  logo              String?
  nomEntreprise     String?
  prenom            String?
  etatCreation      Boolean         @default(false)
  etatModification  Boolean         @default(false)
  codePostal        String          @default("00000")
  complementAdresse String?
  domaineActivite   String          @default("Inconnu")
  justificatif      String?
  pieceIdentite     String?
  profession        String          @default("Inconnu")
  typeCompte        String          @default("auto-entrepreneur")
  typeInscription   String          @default("CESU")
  etatJustificatif  Boolean         @default(false)
  images            Image[]
  modifications     Modification[]
}

model Modification {
  id                String      @id @default(uuid())
  utilisateurId     String
  nom               String?
  prenom            String?
  nomEntreprise     String?
  email             String?
  password          String?
  telephone         String?
  adresse           String?
  complementAdresse String?
  codePostal        String?
  etatValidation    Boolean     @default(false)
  createdAt         DateTime    @default(now())
  siteWeb           String?
  description       String?     @db.Text
  utilisateur       Utilisateur @relation(fields: [utilisateurId], references: [id], onDelete: Cascade)

  @@index([utilisateurId], map: "Modification_utilisateurId_fkey")
}

model Image {
  id            String      @id @default(uuid())
  utilisateurId String
  url           String
  type          String
  createdAt     DateTime    @default(now())
  utilisateur   Utilisateur @relation(fields: [utilisateurId], references: [id], onDelete: Cascade)

  @@index([utilisateurId], map: "Image_utilisateurId_fkey")
}

enum RoleUtilisateur {
  AUTO_ENTREPRENEUR
  ENTREPRISE
  ADMIN
}
